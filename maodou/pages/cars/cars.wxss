/* pages/cars/cars.wxss */
page{
  height: 100%;
  width: 100%;
  margin: 0;
  padding: 0;
}
.header{
  font-family: Arial, sans-serif;
  font-size: 16px;
}
.page{
  line-height:1.6;
  font-family:-apple-system-font,Helvetica Neue,sans-serif;
  display: block;
  display: flex;
  box-sizing: border-box;
  width: 100%;
  border-top:1rpx solid #efeff4;
  border-bottom:1rpx solid #d7d6dc
}
.local{
 width: 10%;
 text-align: center;
 padding: 8px 10px;
}

/* 隐藏定位前搜索栏的样式 */
.weui-search-bar{
  width: 80%;
  position:relative;
  padding:8px 10px;
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  box-sizing:border-box;
  background-color:#ffffff;
}
.weui-icon-search{
  margin-right:0px;
  font-size:inherit
}
.weui-icon-search_in-box{
  position:absolute;
  left:10px;
  top:7px
}
.weui-search-bar__text{
  display:inline-block;
  font-size:14px;
  vertical-align:middle
}
.weui-search-bar__form{
  position:relative;
  -webkit-box-flex:1;
  -webkit-flex:auto;
  flex:auto;
  border-radius:35px;
  background:#efefef;
  border:1rpx solid #e6e6ea
}
.weui-search-bar__box{
  position:relative;
  padding-left:30px;
  padding-right:30px;
  width:100%;
  box-sizing:border-box;
  z-index:1
}
.weui-search-bar__input{
  height:28px;
  line-height:28px;
  font-size:14px
}
.weui-icon-clear{
  position:absolute;
  top:0;right:0;
  padding:7px 8px;
  font-size:0
}
.weui-search-bar__label{
  position:absolute;
  top:0;right:0;bottom:0;left:0;
  z-index:2;
  border-radius:35px;
  color:#9b9b9b;
  background:#efefef;
  line-height:28px
}
.weui-search-bar__cancel-btn{
  margin-left:10px;
  line-height:28px;
  color:#09bb07;
  white-space:nowrap
}
/* 隐藏定位后搜索栏的样式 */
.phone{
  width: 1.2rem;
  height: 1.866rem;
  padding: 8px 10px;
}
.phone image{
  width: 100%;
  height: 100%;
  background:url('https://sta.maodou.com/xinche_wap/static/images/Call@2x.55d8b676.png') no-repeat 50%;
  background-size:1.2rem 1.2rem;
}

/*选择栏的部分*/
.pof{
 position: fixed;
}
.filter-wrap{
  width: 100%;
  height: 1.68667rem;
  display: flex;
  box-pack: justify;
  justify-content: space-between;
  background-color: #ffffff;
  box-shadow: 0 2px 4px 0 rgba(63,67,89,.1);
  left: 0;
 
  top: 3rem;
}
.filter-wrap li {
  list-style: none;
  -webkit-tap-highlight-color: transparent;
  width: 25%;
  height: 100%;
  line-height: 1.7rem;
  text-align: center;
}
/*未点击前选择器的样式*/
.filter-wrap li em{
  cursor: pointer;
  vertical-align: -0.3rem;
  color: #3f4359;
  vertical-align: top;
}
.filter-wrap li image{
  width: 1rem;
  height: 1rem;
  display: inline-block;
  vertical-align: middle;
  margin-left: 0.1rem;
  background: url('https://sta.maodou.com/xinche_wap/static/images/selecteddown.ce28ae8d.png') no-repeat 50%;
  background-size: cover;
}
/*点击之后选择器的样式 */
.filter-wrap li.active em{
  color: #fb7414;
}
.filter-wrap li.active image{
  background: url('data:image/png;base64,') no-repeat 50%;
  background-size: cover;
}
/*隐藏的选择部分*/
.sorting-box{
  position: relative;
  /* background-color: red; */
  /* max-height: 22.16rem; 
  overflow-x: hidden;
  overflow-y: auto;
  width: 100%;
  padding: 0; */
}
.sorting-box li{
  font-size: 0.8rem;
  letter-spacing: normal; 

}
.sorting-box li .brand-title{
  border-bottom: 1px solid #ececf2;
  z-index: 999;
  background-color: #fff;
  width: 750rpx;
  text-align: left;
  display: block;
  padding: .5rem  0 .5rem .4rem;
  color: #5b5e7b;
  height: 1.5rem;
  /* line-height: 0.5rem; */
}
/*图片*/
.bgc{
  height: auto;
  padding-top: 0.8rem;
  padding-left: 0.8rem;
  padding-bottom: 0.8rem;
  padding-right: 0.8rem;
}
.bgc image{
  z-index: 1;
  width: 100%;
  height: 5.887rem;
}
/*车辆信息*/
.content li{
  padding: .8rem .6rem .8rem .6rem;
  display: flex;
  position: relative;
  box-orient: horizontal;
  box-direction: normal;
  flex-direction: row;
  box-sizing: border-box;
  border: 1px solid #e5e5e5;
  border-bottom: 0 ;
}
.image-box{
  width: 8rem;
  position: relative;
}
.left-tag{
  font-family: serif Helvetica Neue-Condensed Bold,Arial-BoldMT;
  font-weight: 800;
  position: absolute;
  top: 0;
  left: 0;
  height: 2.03rem;
  width: 2.03rem;
  background:url('https://image.guazistatic.com/gz01181105/16/19/4b25775c32ea9b5eb5d650405a12265c.png') no-repeat;
  background-position: 0 0;
  background-size: 2.03rem 2.03rem;
  z-index: 10;
}
.letf-tag-wrap{
  width: 100%;
  z-index: 50;
  position: relative;
  top: 50%;
  transform: translateY(-50%);
  line-height: .7rem;
  font-size: 0.7rem;
  text-align: center;
  color: #ffffff;
}
.image-box image{
  position: absolute;
  top: 0;
  left: 0;
  width: 7.25rem;
  height: 4.8rem;
}
.car-detail{
  box-flex: 1;
  flex: 1;
  min-width: 0;
  margin-left: 0.266rem;
  height: 100%;
  position: relative;
}
.car-detail text{
  color: #3f4359;
  letter-spacing: -.74px;
  font-weight: 700;
  line-height: 0.56rem;
  text-align: left;
  font-size: 0.75rem;
}
.tag-box{
  width: 100%;
  margin-bottom: 0.24rem;
  margin-top: 0.15rem;
  display: flex;
}
.tag-box .tag{
  font-family: serif;
  font-weight: 800;
  display: inline-block;
  height: 0.8rem;
  background: #dd1443;
  border-radius: .3rem;
  border: 1px solid #ff1443;
  color: #ffffff;
  vertical-align: middle;
  margin-right: 0.133rem;
  margin-left: 0.0133rem;
  font-size: 0.6rem;
  line-height: 0.85rem;
  text-align: center;
  padding: 0 0.11rem;
}
.payment{
  display: flex;
  bottom: 0.8rem;
  height: 0.44rem;
  margin-bottom: 0.11rem;
  width: 100%;
  box-align: end;
  align-items: flex-end;
  margin-top: 0.8rem;
}
.txt{
  font-size: 0.6rem;
  color: #ff5314;
  letter-spacing: -.85px;
  max-width: 50%;
  margin-right: 0.266rem;
}
.down_payment{
  font-weight: 700;
  margin-right: 0.066rem;
  margin-left: 0.08rem;
  font-size: 0.8rem;
  line-height: 0.5rem;
}